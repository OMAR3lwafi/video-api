# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
BCRYPT_SALT_ROUNDS=12
PASSWORD_RESET_EXPIRY_HOURS=1
MAX_LOGIN_ATTEMPTS=5

# Processing Configuration
MAX_FILE_SIZE_MB=500
PROCESSING_TIMEOUT_MS=600000
QUICK_PROCESSING_THRESHOLD_MS=30000
MAX_CONCURRENT_JOBS=2

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# FFmpeg Configuration (Optional)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Security Headers Configuration
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_REPORT_URI=/api/v1/security/csp-report

# File Upload Security
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/avi,audio/mp3
MAX_UPLOAD_FILES=10
SCAN_UPLOADS_FOR_MALWARE=true

# Rate Limiting Tiers
RATE_LIMIT_GUEST_MAX=10
RATE_LIMIT_USER_MAX=100
RATE_LIMIT_PREMIUM_MAX=500
RATE_LIMIT_ADMIN_MAX=1000

# Security Monitoring
ENABLE_SECURITY_LOGGING=true
SECURITY_LOG_LEVEL=warn
BLOCK_SUSPICIOUS_REQUESTS=true

# API Security
API_KEY_PREFIX=vp_
API_KEY_LENGTH=64
ENABLE_API_KEY_AUTH=true

# Session Security
SESSION_TIMEOUT_MINUTES=30
ENABLE_SESSION_ROTATION=true
SECURE_COOKIES=true

# Development/Testing
DISABLE_RATE_LIMITING=false
ENABLE_DEBUG_LOGGING=false
MOCK_EXTERNAL_SERVICES=false