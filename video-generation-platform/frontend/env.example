# Environment Configuration for Video Generation Platform Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# AWS S3 Configuration (Optional - for direct uploads)
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_BUCKET=your-s3-bucket-name

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_DEV_TOOLS=true

# Upload Limits
VITE_MAX_FILE_SIZE=104857600  # 100MB in bytes
VITE_MAX_ELEMENTS=10
VITE_MAX_VIDEO_DURATION=600   # 10 minutes in seconds

# UI Configuration
VITE_DEFAULT_THEME=system     # light | dark | system
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUNDS=false

# Performance Configuration
VITE_CACHE_TTL=300000         # 5 minutes in milliseconds
VITE_PREFETCH_ENABLED=true

# Development Configuration
VITE_LOG_LEVEL=info           # error | warn | info | debug

# Optional: Sentry Error Tracking (Production)
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_SENTRY_ENVIRONMENT=production

# Optional: Google Analytics (Production)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Hotjar Analytics (Production)
# VITE_HOTJAR_ID=your_hotjar_id
# VITE_HOTJAR_VERSION=6

# Optional: Intercom Support (Production)
# VITE_INTERCOM_APP_ID=your_intercom_app_id