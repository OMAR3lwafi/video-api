# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Local Development
SUPABASE_LOCAL_URL=http://127.0.0.1:54321
SUPABASE_LOCAL_ANON_KEY=your-local-anon-key
SUPABASE_LOCAL_SERVICE_KEY=your-local-service-key

# Migration Settings
MIGRATION_TABLE=supabase_migrations
MIGRATION_SCHEMA=supabase_migrations

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000

# Real-time Settings
REALTIME_ENABLED=true
REALTIME_MAX_CONNECTIONS=100

# Storage Settings
STORAGE_ENABLED=true
STORAGE_FILE_SIZE_LIMIT=52428800

# Auth Settings
AUTH_ENABLED=true
AUTH_SITE_URL=http://localhost:5173
AUTH_JWT_EXPIRY=3600
