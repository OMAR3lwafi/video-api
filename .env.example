# Dynamic Video Content Generation Platform - Environment Variables
# Copy this file to .env.local for development or .env for production

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase Project URL
# Get this from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (Public)
# This key is safe to use in client-side code
# Get this from your Supabase project API settings
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private)
# This key bypasses Row Level Security - keep it secret!
# Only use on server-side operations
# Get this from your Supabase project API settings
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# AWS S3 CONFIGURATION
# ============================================================================

# AWS Access Key ID for S3 operations
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here

# AWS Secret Access Key for S3 operations
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Default AWS Region for S3 buckets
AWS_REGION=us-east-1

# S3 Bucket Name for video storage
S3_BUCKET_NAME=your-video-storage-bucket

# S3 Bucket Region (can be different from AWS_REGION)
S3_BUCKET_REGION=us-east-1

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Environment
NODE_ENV=development

# Server Port
PORT=3000

# API Base URL
API_BASE_URL=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# VIDEO PROCESSING CONFIGURATION
# ============================================================================

# FFmpeg Binary Path (optional, defaults to system PATH)
FFMPEG_PATH=/usr/bin/ffmpeg

# FFprobe Binary Path (optional, defaults to system PATH)
FFPROBE_PATH=/usr/bin/ffprobe

# Maximum video duration in seconds
MAX_VIDEO_DURATION=600

# Maximum file size in bytes (100MB)
MAX_FILE_SIZE=104857600

# Temporary directory for video processing
TEMP_DIR=/tmp/video-processing

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/video_platform

# Connection Pool Size
DB_POOL_SIZE=10

# Connection Timeout
DB_CONNECTION_TIMEOUT=30000

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================

# Redis URL for caching and job queues
REDIS_URL=redis://localhost:6379

# Redis Password (if required)
REDIS_PASSWORD=

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=9090

# Log Level
LOG_LEVEL=info

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_SWAGGER=true

# Enable CORS for development
ENABLE_CORS=true
